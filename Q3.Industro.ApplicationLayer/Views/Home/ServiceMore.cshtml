            <div class="col-md-6">
                <div><img src="@Model.ServiceImgUrl" class="service-img" style="width:300px"></div>
            </div>
            <div class="col-md-6">
                <div class="taital_main">
                    <h1 class="hannery_text">@Model.ServiceName</h1>
                    <p class="fact_text">@Model.ServiceDesc</p>
                    <p class="fact_text">@Model.ServiceDesc</p>
                    <p class="fact_text">@Model.ServiceDesc</p>
                    <p class="fact_text">@Model.ServiceDesc</p>

